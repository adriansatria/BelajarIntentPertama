<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/telepon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="TELEPON"
        android:textColor="#ffffff"
        android:drawableStart="@drawable/phone"
        android:paddingLeft="20dp"
        android:paddingRight="35dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:onClick="panggil"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></Button>
    <Button
        android:id="@+id/browser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="BUKA BROWSER"
        android:onClick="buka"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_open_in_browser_black_24dp"
        android:paddingLeft="20dp"
        android:paddingRight="35dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.120"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/telepon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></Button>
    <Button
        android:id="@+id/tentang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="TENTANG APLIKASI"
        android:onClick="tentang"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:drawableStart="@drawable/info"
        android:paddingLeft="20dp"
        android:paddingRight="35dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.140"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/browser"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>